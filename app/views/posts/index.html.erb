<div class="row">
  <div class="col-md-12">
    <ul class="list-unstyled">
      <% @posts.reverse.each do |post| %>
        <li class="post">
          <p class="post-body">
            <%= post.body %>
          </p>
          <p>
            <em class="post-user">
              <% if logged_in? %>
                <%= post.user.name + " " %>
              <% else %>
                xxx
              <% end %>
            </em>
            <span class="post-id pull-right" id="<%= post.id %>">
              <% if author?(post) %>
                <%= link_to "Delete", post_path(post), method: :delete,
                    data: { confirm: "Are you sure?" } %><%= " | " %>
              <% end %>
              <%= link_to "# #{post.id}", root_path + "##{post.id}" %>
            </span>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
